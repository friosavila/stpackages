	keywords = {Difference-in-differences, Pretrend test, Two-way fixed effects},
	pages = {175--199},
	file = {ScienceDirect Full Text PDF:C\:\\Users\\Fernando\\Zotero\\storage\\EJL6C6I2\\Sun and Abraham - 2021 - Estimating dynamic treatment effects in event stud.pdf:application/pdf;ScienceDirect Snapshot:C\:\\Users\\Fernando\\Zotero\\storage\\65LTBBW3\\S030440762030378X.html:text/html},
}

@misc{wooldridge2021,
