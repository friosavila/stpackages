	journal = {Journal of Econometrics},
	author = {Callaway, Brantly and Sant’Anna, Pedro H. C.},
	month = dec,
	year = {2021},
	keywords = {Difference-in-Differences, Doubly robust, Dynamic treatment effects, Event study, Semi-parametric, Treatment effect heterogeneity, Variation in treatment timing},
	pages = {200--230},
	file = {ScienceDirect Full Text PDF:C\:\\Users\\Fernando\\Zotero\\storage\\WJ6F5C3J\\Callaway and Sant’Anna - 2021 - Difference-in-Differences with multiple time perio.pdf:application/pdf;ScienceDirect Snapshot:C\:\\Users\\Fernando\\Zotero\\storage\\B3SVJM22\\S0304407620303948.html:text/html},
